{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node16",
    "target": "es6",
    "module": "Node16",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
