# Root Environment Configuration Template
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Database URLs
DATABASE_URL=postgresql://username:password@localhost:5432/shareuptime
MONGODB_URL=mongodb://localhost:27017/shareuptime
REDIS_URL=redis://localhost:6379
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
POST_SERVICE_PORT=3003
FEED_SERVICE_PORT=3004
MEDIA_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19000,http://localhost:8081

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800

# Optional: Cloud Storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=us-east-1

# Optional: Push Notifications
# FIREBASE_PROJECT_ID=
# FIREBASE_PRIVATE_KEY=
# FIREBASE_CLIENT_EMAIL=
